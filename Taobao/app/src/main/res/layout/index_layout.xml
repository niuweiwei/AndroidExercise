<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-14dp"
            android:src="@drawable/banner" />

        <cn.edu.hebtu.software.taobao.GridViewForScrollView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="5"></cn.edu.hebtu.software.taobao.GridViewForScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pic" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/tao1" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/tao2" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/tao3" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:src="@drawable/tao4" />
        </GridLayout>
    </LinearLayout>
</ScrollView>