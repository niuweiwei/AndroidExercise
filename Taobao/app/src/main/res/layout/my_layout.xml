<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#ec6b2b"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_marginLeft="10sp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/portrait"/>
                <TextView
                    android:id="@+id/gotoLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textSize="24sp"
                    android:textColor="#ffff"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <GridView
                android:id="@+id/user"
                android:background="#ef8f34"
                android:numColumns="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </GridView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="我的订单"
                    android:textColor="#000000"/>
                <cn.edu.hebtu.software.taobao.GridViewForScrollView
                    android:layout_marginTop="10dp"
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5">
                </cn.edu.hebtu.software.taobao.GridViewForScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="必备工具"
                    android:textColor="#000000"/>
                <cn.edu.hebtu.software.taobao.GridViewForScrollView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4">
                </cn.edu.hebtu.software.taobao.GridViewForScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_marginLeft="120dp"
                       android:layout_gravity="center_vertical"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/paylogo"/>
                   <TextView
                       android:layout_marginLeft="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="我的支付宝"
                       android:textSize="22sp"
                       />
               </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="888.80元"
                            android:textSize="24sp"
                            android:textColor="#00a0e9"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="本月淘宝消费"
                            android:textSize="16sp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:textColor="#b1b1b1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="花了多少一目了然"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="710分"
                            android:textSize="24sp"
                            android:textColor="#00a0e9"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="芝麻分有哪些用途"
                            android:textSize="16sp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:textColor="#b1b1b1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="去看看"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstyle1"
                    android:text="查看更多服务"
                    android:textSize="16sp"
                    android:textColor="#00a0e9"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>