<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="62dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#ffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/product_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/product_price"
                        android:textColor="#ec6b2b"
                        android:textSize="30sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="促销优惠"
                        android:textColor="#ec6b2b"
                        android:textSize="18sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="价格"
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="10000"
                        android:id="@+id/price"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <Button
                        android:gravity="center_vertical"
                        android:background="@drawable/sharebuttonstyle"
                        android:drawableLeft="@drawable/share"
                        android:textColor="#a6a6a6"
                        android:text="分享"
                        android:layout_alignParentRight="true"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:textSize="18sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递:0.00"
                        android:textSize="18sp"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_marginLeft="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月销"/>
                    <TextView
                        android:id="@+id/product_sell"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/product_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="领券"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="满6400元减50券;满5400元减30券"
                            android:textSize="16sp"
                            android:textColor="#000000"/>
                     </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="服务"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="7天无理由 48小时内发货"
                            android:textColor="#000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="选择"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="选择 机身颜色 套餐类型 存储容量 版本类型"
                            android:textSize="16sp"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="参数"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:layout_marginLeft="15dp" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="网络类型 品牌..."
                            android:textColor="#000"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#ffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宝贝评价(738)"
                        android:textColor="#000"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看全部"
                            android:textSize="18sp"
                            android:textColor="#ec6b2b" />
                        <ImageView
                            android:id="@+id/more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/commentbuttonstyle"
                        android:text="正品原装(199)"
                        android:textColor="#000"
                        android:textSize="14sp" />
                    <Button
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/commentbuttonstyle"
                        android:textColor="#000"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="价格实惠(1936)" />
                    <Button
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/commentbuttonstyle"
                        android:textColor="#000"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:text="快递给力(200)" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/user"/>
                        <TextView
                            android:id="@+id/customer"
                            android:layout_marginLeft="15dp"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/comment"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/suning"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="苏宁易购官方旗舰店"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"/>
                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/buttonstyle"
                        android:text="全部宝贝"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="#ff4200"/>
                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/buttonstyle3"
                        android:text="进店逛逛"
                        android:textSize="16sp"
                        android:textColor="#ffff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="宝贝描述"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="卖家服务"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="物流服务"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <Button
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/store"
            android:background="#fff"
            android:text="店铺"
            android:textSize="12sp"
            android:layout_width="52dp"
            android:layout_height="52dp" />
        <Button
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/kefu"
            android:background="#fff"
            android:text="客服"
            android:textSize="12sp"
            android:layout_width="52dp"
            android:layout_height="52dp" />
        <Button
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/shoucang"
            android:background="#fff"
            android:text="收藏"
            android:textSize="12sp"
            android:layout_width="52dp"
            android:layout_height="52dp" />
        <Button
            android:layout_marginLeft="15dp"
            android:background="@drawable/addstyle"
            android:textSize="18sp"
            android:text="加入购物车"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_height="45dp" />
        <Button
            android:background="@drawable/buystyle"
            android:textSize="18sp"
            android:text="立即购买"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:layout_width="110dp"
            android:layout_height="45dp" />
    </LinearLayout>
</RelativeLayout>